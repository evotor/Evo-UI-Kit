{
  "name": "evo-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "gulp link && ng serve",
    "build": "gulp",
    "build:storybook": "gulp storybook",
    "test": "ng test evo-ui-kit",
    "e2e": "ng e2e",
    "lint": "ng lint && npm run lint:styles",
    "lint:styles": "stylelint \"**/*.scss\"",
    "lint:styles:fix": "stylelint \"**/*.scss\" --syntax scss --fix",
    "storybook": "gulp link && start-storybook -p 9001 -s node_modules/evo-ui-kit,src/assets -c .storybook",
    "release": "ng test evo-ui-kit --watch=false && cd projects/evo-ui-kit/ && npm run release && cd ../../ && npm run build",
    "publish-package": "yarn install && yarn build && cd dist/evo-ui-kit && npm publish --registry http://npm.market.local"
  },
  "pre-commit": [
    "lint"
  ],
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.4",
    "@angular/common": "^7.2.4",
