    "@ng-select/ng-select": "12.0.7",
    "@popperjs/core": "2.11.8",
    "angular-imask": "7.6.1",
    "autobind-decorator": "^2.4.0",
    "core-js": "^3.6.5",
    "flatpickr": "4.6.9",
    "handlebars": "4.7.7",
    "imask": "7.6.1",
    "lodash-es": "^4.17.15",
    "ng-packagr": "17.3.0",
    "ngx-page-scroll": "12.0.0",
