{
  "extends": "stylelint-config-rational-order",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "at-root",
          "content",
          "function",
          "if",
          "for",
          "else",
          "each",
          "include",
          "extend",
          "mixin"
        ]
      }
    ],
    "color-named": "never",
    "indentation": [
      4,
      {
        "indentInsideParens": "once-at-root-twice-in-block",
        "severity": "error"
      }
    ],
    "max-empty-lines": 2,
    "no-duplicate-selectors": true,
    "selector-pseudo-element-colon-notation": "single"
  }
}
