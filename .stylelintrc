{
    "plugins": ["stylelint-order", "stylelint-scss"],
    "ignoreFiles": ["dist/**/*.*"],
    "rules": {
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["aspect-ratio"]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "at-root",
                    "content",
                    "function",
                    "if",
                    "for",
                    "else",
                    "each",
                    "include",
                    "extend",
                    "mixin",
                    "use",
                    "error",
                    "return"
                ]
            }
        ],
        "color-named": "never",
        "indentation": [
            4,
            {
                "indentInsideParens": "once-at-root-twice-in-block",
                "severity": "error"
            }
        ],
        "max-empty-lines": 2,
        "no-duplicate-selectors": true,
        "selector-pseudo-element-colon-notation": "single"
    }
}
